     <td>Previous Balance</td> 
     <td>Agent UI</td> 
    </tr> 
    <tr> 
     <td>Payments</td> 
     <td>Agent UI</td> 
    </tr> 
    <tr> 
     <td>Adjustments</td> 
     <td>Agent UI</td> 
    </tr> 
